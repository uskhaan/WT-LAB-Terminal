extends layout

block content
  h1 My shopping Cart
  - var total=0;
  - var items=0;
    table.table
      thead
        th Name
        th Price
        th Actions
        th=Rating
      tbody
        each item in cart
          - total += Number(item.price)
          - items ++
          tr
            td=item.name
            td=item.price
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
            td
              a(href="/products/rating/"+item._id, class="btn btn-success") Rating
      tfoot
        tr
          td Total
          if (items>=3)
            td=total
          td 
            a(href="/products/rating", class="btn btn-success") Buy
            p Click on Buy to provide Ratings


